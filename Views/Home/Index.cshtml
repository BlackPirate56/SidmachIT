
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sign-In with Microsoft Office 365 Guided Setup</title>
    
</head>
<body>
    
    <main>
        <div class="container-fluid">
            @if (!Request.IsAuthenticated)
            {
                
                <div class="row" style="padding:20% 0;">
                    <div class="col-md-2"></div>
                    <div class="col-md-8" style="text-align:center;">
                        <h1 style="font-size:50px;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">Welcome to Grade56 eClass</h1>
                        @*<p>Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.</p>*@
                        <br /><br /><br />
                        <p>
                            <a href="@Url.Action("SignIn", "Home")" style="text-decoration: none;">
                                <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" width="300px" height="50px" viewBox="0 0 3278 522" class="SignInButton">
                                <style type="text/css">
                                    .fil0:hover {
                                        fill: #4B4B4B;
                                    }

                                    .fnt0 {
                                        font-size: 260px;
                                        font-family: 'Segoe UI Semibold', 'Segoe UI';
                                        text-decoration: none;
                                    }
</style>
                                <rect class="fil0" x="2" y="2" width="3174" height="517" fill="black" />

                                <rect x="150" y="129" width="122" height="122" fill="#F35325" />

                                <rect x="284" y="129" width="122" height="122" fill="#81BC06" />

                                <rect x="150" y="263" width="122" height="122" fill="#05A6F0" />

                                <rect x="284" y="263" width="122" height="122" fill="#FFBA08" />

                                <text x="470" y="357" fill="white" class="fnt0">Sign in with Microsoft</text>
        </svg>
                            </a>
                        </p>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            }
            else
            {
                <span><br />Hello @((User.Identity as System.Security.Claims.ClaimsIdentity)?.FindFirst("name")?.Value)</span>
                <br /><br />
                @Html.ActionLink("See Your Claims", "Index", "Claims")
                <br /><br />
                @Html.ActionLink("Sign out", "SignOut", "Home")
            }
            @if (!string.IsNullOrWhiteSpace(Request.QueryString["errormessage"]))
            {
                <div style="background-color:red;color:white;font-weight: bold;">Error: @Request.QueryString["errormessage"]</div>
            }
        </div>
    </main>
</body>
</html>

